<!-- cards.hbs -->
<div class="food-scroll-container">
    {{#each restaurants}}
        <div class="food-card" onclick="window.location.href='/view/restaurant/{{_id}}'">
            <img src={{picture_address}}>
            <div class="food-info">
                <h3>{{name}}</h3>
                <p>{{type}}</p>
                <p class="rating" style="--rating: {{rating}};"></p>
            </div>
        </div>
    {{/each}}
</div>