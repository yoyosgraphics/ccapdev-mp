{{#each comments}}
    {{#if owner}}
        <div class="reply-background owner-background">
    {{else}}
        <div class="reply-background-2">
    {{/if}}
        <div class="reply-container">
            <div class="reply-heading-container">
                <b><p>Reply from  
                    <span class="text-clickable" onclick="window.location.href='/users/{{user_id._id}}'">
                        {{user_id.first_name}} {{user_id.last_name}}
                        {{#if owner}}(Owner){{/if}}
                    </span>
                    {{#if edit_status}}
                    <span> * </span>
                    {{/if}}
                </p></b>

                {{#if author}}
                <img src="/common/edit-icon.png" alt="Edit Icon" class="icon-margin-left-right icon-clickable" onclick="window.location.href='/view/reviews/{{review_id}}/edit/{{_id}}'">
                <div class="divider"></div>
                <img src="/common/delete-icon.png" alt="Delete Icon" class="icon-margin-left-right icon-clickable">
                {{/if}}
            </div>
            <p>{{content}}</p>
        </div>
    </div>
{{/each}}
